<div id="app">
	<div id="header">
		<h1>Yarda <spam id="yard">@ViewBag.yard.Name</spam></h1>
	</div>
	<div id="content">
		<div class="box">
			<table style="margin: 0 auto;">
				<tr>
					<th></th>
					<th style="font-size: 3em;text-align:center;width: 15em;">Actual</th>
					<th style="font-size: 3em;text-align:center;">Max</th>
				</tr>
				<tr>
					<th style="font-size: 3em;text-align:right;">Equipos</th>
					<th style="font-size: 14em;text-align:center;"><spam id="cur_equipment">@ViewBag.yard.max_equipment</spam></th>
					<th style="font-size: 14em;text-align:center;"><spam id="max_equipment">@ViewBag.yard.cur_equipment</spam></th>
				</tr>
				<tr>
					<th style="font-size: 3em;text-align:right;">Unidades</th>
					<th style="font-size: 14em;text-align:center;"><spam id="cur_units">@ViewBag.yard.cur_units</spam></th>
					<th style="font-size: 14em;text-align:center;"><spam id="max_units">@ViewBag.yard.max_units</spam></th>
				</tr>
			</table>
		</div>
	</div>
	<div id="footer">
		<table style=" width: 50%;margin: 0 auto;">
			<tr>
				<th style="font-size: 2em;text-align:center;">Última Actualización</th>
				<th style="font-size: 2em;text-align:center;">Fecha actual</th>
			</tr>
			<tr>
				<th style="font-size: 2em;text-align:center;"><spam id="update">@ViewBag.yard.update.ToString("dd/MM/yyyy HH:mm:ss")</spam></th>
				<th style="font-size: 2em;text-align:center;"><span id="clock"></span></th>
			</tr>
		</table>
	</div>
</div>